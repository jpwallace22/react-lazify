{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020"],
    "allowJs": false,
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
  },
  "include": ["**/*.d.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}
